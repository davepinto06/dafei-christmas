---
import CountDown from "../components/Countdown"
import SnowFall from "../components/SnowFall"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Dafei's Christmas" description="Time until Christmas">
  <main id="snowfall-container" class="main-container">
    <SnowFall client:load />
    <CountDown client:load />
    <img class="moon" src="https://images.dafei.es/home-moon.png" alt="Moon" />
    <img
      class="santa"
      src="https://images.dafei.es/home-trineo-santa.png"
      alt="Santa"
    />
    <img
      class="mountain-3"
      src="https://images.dafei.es/home-mountain-3.png"
      alt="Mountain"
    />
    <img
      class="mountain-2"
      src="https://images.dafei.es/home-mountain-2.png"
      alt="Mountain"
    />
    <img
      class="pine-tree"
      src="https://images.dafei.es/home-pine-tree.png"
      alt="Pine Tree"
    />
    <img
      class="village"
      src="https://images.dafei.es/home-village.png"
      alt="Village"
    />
    <img class="snow" src="https://images.dafei.es/home-snow.png" alt="Snow" />
    <img
      class="mountain-1"
      src="https://images.dafei.es/home-mountain-1.png"
      alt="Mountain"
    />
  </main>

  <style>
    .main-container {
      position: relative;
      overflow: hidden;
      height: 100svh;
    }

    img.moon {
      position: absolute;
      left: 0;
      right: 0;
      margin: 0 auto;
      width: 20rem;
      bottom: 8rem;
    }

    img.santa {
      position: absolute;
      left: 0;
      right: 0;
      margin: 0 auto;
      width: 16rem;
      bottom: 14rem;
    }

    img.mountain-3 {
      position: absolute;
      bottom: 6rem;
      width: 100%;
    }

    img.mountain-2 {
      position: absolute;
      bottom: 3rem;
      width: 100%;
    }

    img.pine-tree {
      position: absolute;
      left: 0;
      right: 0;
      margin: 0 auto;
      width: 15rem;
      bottom: 5rem;
    }

    img.village {
      position: absolute;
      left: 0;
      right: 0;
      margin: 0 auto;
      width: 18rem;
      bottom: 1rem;
    }

    img.snow {
      position: absolute;
      bottom: 0;
      width: 100%;
    }

    img.mountain-1 {
      position: absolute;
      bottom: 0;
      width: 100%;
    }

    /* Small screens (min-width: 640px) */
    @media (min-width: 640px) {
      img.moon {
        width: 24rem;
        bottom: 10rem;
      }

      img.santa {
        width: 18rem;
        bottom: 16rem;
      }

      img.pine-tree {
        width: 350px;
      }

      img.village {
        width: 360px;
      }
    }

    /* Medium screens (min-width: 768px) */
    @media (min-width: 768px) {
      img.moon {
        width: 450px;
        bottom: 12rem;
      }

      img.santa {
        width: 350px;
        bottom: 20rem;
      }

      img.pine-tree {
        width: 400px;
        bottom: 7rem;
      }

      img.village {
        width: 460px;
      }
    }

    /* Large screens (min-width: 1024px) */
    @media (min-width: 1024px) {
      img.moon {
        width: 470px;
        bottom: 13rem;
      }

      img.santa {
        width: 370px;
        bottom: 24rem;
      }

      img.pine-tree {
        width: 500px;
        bottom: 10rem;
      }

      img.village {
        width: 550px;
        bottom: 3.5rem;
      }
    }

    /* Extra large screens (min-width: 1280px) */
    @media (min-width: 1280px) {
      img.moon {
        width: 600px;
        bottom: 10rem;
      }

      img.santa {
        width: 500px;
        bottom: 26rem;
      }

      img.mountain-3 {
        bottom: 8rem;
      }

      img.mountain-2 {
        bottom: 2rem;
      }

      img.pine-tree {
        width: 720px;
        bottom: 8rem;
      }

      img.village {
        width: 750px;
        bottom: 1rem;
      }

      img.mountain-1 {
        bottom: -2rem;
      }
    }

    @media (min-width: 1536px) {
      img.moon {
        width: 650px;
        bottom: 8rem;
      }

      img.santa {
        width: 550px;
        bottom: 26rem;
      }

      img.mountain-3 {
        bottom: 3rem;
      }

      img.mountain-2 {
        bottom: -1rem;
      }

      img.pine-tree {
        width: 820px;
        bottom: 8rem;
      }

      img.village {
        width: 750px;
        bottom: 1rem;
      }

      img.mountain-1 {
        bottom: -2rem;
      }

      img.snow {
        bottom: -2rem;
      }
    }

    @media (min-width: 1024px) and (min-height: 600px) {
      img.moon {
        width: 450px;
      }

      img.santa {
        width: 450px;
        bottom: 21rem;
      }

      img.mountain-3 {
        bottom: 3rem;
      }

      img.mountain-2 {
        bottom: -1rem;
      }

      img.pine-tree {
        width: 620px;
        bottom: 8rem;
      }

      img.village {
        width: 650px;
        bottom: 1rem;
      }
    }
  </style>
</Layout>
